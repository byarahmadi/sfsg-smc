LLVM_CONFIG?=llvm-config
CXX=clang

SRC_DIR?=$(PWD)
LDFLAGS+=$(shell $(LLVM_CONFIG) --ldflags)
COMMON_FLAGS=-Wall -Wextra
CXXFLAGS+=$(COMMON_FLAGS) $(shell $(LLVM_CONFIG) --cxxflags)
CPPFLAGS+=$(shell $(LLVM_CONFIG) --cppflags) -I$(SRC_DIR)

LOADABLE_MODULE_OPTIONS=-shared -W1 -O1

LLVM_BASIC_BLOCK_BREAKER_PASS=basicblock_breaker_pass.so
LLVM_BASIC_BLOCK_BREAKER_OBJECTS=llvmBasicBlockBreakerPass.o

default:$(LLVM_BASIC_BLOCK_BREAKER_PASS)

%o:$(SRC_DIR)/%.cpp
	$(CXX) -c $(CPPFLAGS) $(CXXFLAGS) $<
$(LLVM_BASIC_BLOCK_BREAKER_PASS):$(LLVM_BASIC_BLOCK_BREAKER_OBJECTS)
	$(CXX) -o $@ $(LOADABLE_MODULE_OPTIONS) $(CXXFLAGS) $(LDFLAGS) $^
clean:
	rm -f $(LLVM_BASIC_BLOCK_BREAKER_PASS) $(LLVM_BASIC_BLOCK_BREAKER_OBJECTS)

