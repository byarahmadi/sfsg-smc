LLVM_CONFIG?=llvm-config
CXX=clang

SRC_DIR?=$(PWD)
LDFLAGS+=$(shell $(LLVM_CONFIG) --ldflags)
COMMON_FLAGS=-Wall -Wextra
CXXFLAGS+=$(COMMON_FLAGS) $(shell $(LLVM_CONFIG) --cxxflags)
CPPFLAGS+=$(shell $(LLVM_CONFIG) --cppflags) -I$(SRC_DIR)

LOADABLE_MODULE_OPTIONS=-shared -W1 -O1

LLVMCHECKPOINTPLACERPASS=checkpointplacer.so
LLVMCHECKPOINTPLACERPASS_OBJECTS=llvmCheckpointPlacerPass.o

default:$(LLVMCHECKPOINTPLACERPASS)

%o:$(SRC_DIR)/%.cpp
	$(CXX) -c $(CPPFLAGS) $(CXXFLAGS) $<
$(LLVMCHECKPOINTPLACERPASS):$(LLVMCHECKPOINTPLACERPASS_OBJECTS)
	$(CXX) -o $@ $(LOADABLE_MODULE_OPTIONS) $(CXXFLAGS) $(LDFLAGS) $^
clean:
	rm -f $(LLVMCHECKPOINTPLACERPASS) $(LLVMCHECKPOINTPLACERPASS_OBJECTS)

