LLVM_CONFIG?=llvm-config
CXX=clang

SRC_DIR?=$(PWD)
LDFLAGS+=$(shell $(LLVM_CONFIG) --ldflags)
COMMON_FLAGS=-Wall -Wextra
CXXFLAGS+=$(COMMON_FLAGS) $(shell $(LLVM_CONFIG) --cxxflags)
CPPFLAGS+=$(shell $(LLVM_CONFIG) --cppflags) -I$(SRC_DIR)

LOADABLE_MODULE_OPTIONS=-shared -W1 -O1

LLVMRENAMEMAINPASS=rename_main.so
LLVMRENAMEMAINPASS_OBJECTS=llvmRenameMainPass.o

default:$(LLVMRENAMEMAINPASS)

%o:$(SRC_DIR)/%.cpp
	$(CXX) -c $(CPPFLAGS) $(CXXFLAGS) $<
$(LLVMRENAMEMAINPASS):$(LLVMRENAMEMAINPASS_OBJECTS)
	$(CXX) -o $@ $(LOADABLE_MODULE_OPTIONS) $(CXXFLAGS) $(LDFLAGS) $^
clean:
	rm -f $(LLVMRENAMEMAINPASS) $(LLVMRENAMEMAINPASS_OBJECTS)

